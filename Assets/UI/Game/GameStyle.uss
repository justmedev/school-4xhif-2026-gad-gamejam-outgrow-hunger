    border-bottom-left-radius: 50px;
    border-left-color: rgb(255, 140, 140);
    border-right-color: rgb(255, 140, 140);
    border-top-color: rgb(255, 140, 140);
    border-bottom-color: rgb(255, 140, 140);
    min-width: 75%;
}
